@model e_commerce.ViewModels.ProductWithCategoryVM

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center text-primary mt-4">Product Details</h1>

<div class="details-container card shadow p-4 mb-4 bg-light rounded mx-auto">
    <h4 class="text-success text-center mb-4">@Model.productName</h4>
    <dl class="row">
        <dt class="col-sm-3 fw-bold">Category ID</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.categoryId)</dd>

        <dt class="col-sm-3 fw-bold">Category Name</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.categoryName)</dd>

        <dt class="col-sm-3 fw-bold">Stock Quantity</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.stockQuantity)</dd>

        <dt class="col-sm-3 fw-bold">Description</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.description)</dd>

        <dt class="col-sm-3 fw-bold">Price</dt>
        <dd class="col-sm-9 text-success fw-bold">$@Html.DisplayFor(model => model.price)</dd>

        <dt class="col-sm-3 fw-bold">Product Name</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.productName)</dd>
    </dl>
</div>

<div class="text-center mt-4">
    @Html.ActionLink("Edit", "Edit", new { id = Model.productId }, new { @class = "btn btn-warning mx-2" })
    <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
</div>



<style>

    /* Details page styling */
    .details-container {
        max-width: 700px;
        margin: 20px auto;
        border: 1px solid #e0e0e0;
        background-color: #f8f9fa;
        border-radius: 10px;
    }

        .details-container h4 {
            color: #28a745;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .details-container dl.row {
            font-size: 1rem;
            line-height: 1.6;
        }

        .details-container dt {
            color: #343a40;
        }

        .details-container dd {
            color: #555;
        }

            .details-container dd.text-success {
                font-size: 1.1rem;
            }

    .btn {
        font-size: 1rem;
        padding: 10px 20px;
        border-radius: 6px;
    }


</style>